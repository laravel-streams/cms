{
    "source": {
        "format": "json"
    },
    "routes": [
        {
            "handle": "redirect",
            "uri": "{from}",
            "redirect": "{to}",
            "status_code": "{status}",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true,
            "input": {
                "placeholder": "exmample-promo"
            }
        },
        {
            "handle": "from",
            "type": "string",
            "unique": true,
            "required": true
        },
        {
            "handle": "to",
            "type": "string",
            "required": true
        },
        {
            "handle": "status",
            "type": "enum",
            "required": true,
            "config": {
                "options": {
                    "301": "301 Permenant",
                    "302": "302 Temporary" 
                }
            }
        },
        {
            "handle": "secure",
            "type": "boolean"
        }
    ],
    "ui": {
        "cp": {
            "section": {
                "sort_order": 3,
                "buttons": [
                    {
                        "handle": "create"
                    }
                ]
            }
        },
        "tables": [
            {
                "handle": "default",
                "filters": [
                    {
                        "handle": "search",
                        "fields": [
                            "from",
                            "to"
                        ]
                    }
                ],
                "columns": [
                    {
                        "handle": "from"
                    },
                    {
                        "handle": "to"
                    },
                    {
                        "handle": "status"
                    }
                ],
                "buttons": [
                    {
                        "handle": "edit"
                    },
                    {
                        "handle": "test",
                        "attributes": {
                            "target": "_blank",
                            "href": "{entry.from}"
                        }
                    }
                ]
            }
        ],
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "cancel",
                        "attributes": {
                            "href": "{cp.section}"
                        }
                    }
                ]
            }
        ]
    },
    "data": [
        {
            "id": "d8454301-814a-4bf4-b667-b70d3823d520",
            "from": "old-path",
            "to": "new-path",
            "status": "302",
            "secure": null
        },
        {
            "id": "33c52a31-49a5-4bf4-4798-92ed3023d2aa",
            "from": "/",
            "to": "about",
            "status": "301",
            "secure": null
        }
    ]
}
