{
    "source": {
        "format": "json"
    },
    "routes": [
        {
            "handle": "redirect",
            "uri": "{from}",
            "redirect": "{to}",
            "status_code": "{status}",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true,
            "input": {
                "placeholder": "exmample-promo"
            }
        },
        {
            "handle": "from",
            "type": "string",
            "unique": true,
            "required": true
        },
        {
            "handle": "to",
            "type": "string",
            "required": true
        },
        {
            "handle": "status",
            "required": true,
            "type": "enum",
            "config": {
                "options": {
                    "301": "301 Permenant",
                    "302": "302 Temporary" 
                }
            }
        },
        {
            "handle": "secure",
            "type": "boolean",
            "input": {
                "label": "Force a secure redirect."
            }
        }
    ],
    "ui": {
        "admin": {
            "navigation": [
                {
                    "sort_order": 4,
                    "text": "Redirects",
                    "url": "/admin/redirects",
                    "component": "anchor"
                }
            ]
        },
        "tables": [
            {
                "handle": "default",
                "filters": [
                    {
                        "handle": "search",
                        "fields": [
                            "from",
                            "to"
                        ]
                    }
                ],
                "columns": [
                    {
                        "heading": "From",
                        "value": "from"
                    },
                    {
                        "heading": "To",
                        "value": "to"
                    },
                    {
                        "heading": "Status",
                        "value": "status"
                    }
                ],
                "buttons": [
                    {
                        "tag": "a",
                        "handle": "edit",
                        "text": "Edit",
                        "url": "/{request.segments.0}/{request.segments.1}/{entry.id}/edit"
                    },
                    {
                        "tag": "a",
                        "handle": "test",
                        "text": "Test",
                        "url": "{entry.from}",
                        "attributes": {
                            "target": "_blank"
                        }
                    }
                ]
            }
        ]
    }
}
