{
    "config": {
        "source": {
            "format": "html"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "/post/{id}",
            "view": "post",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "name": "ID",
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "author",
            "type": "string",
            "required": true
        },
        {
            "handle": "author_text",
            "type": "string"
        },
        {
            "handle": "author_url",
            "type": "url",
            "required": true
        },
        {
            "handle": "publish_at",
            "type": "date",
            "required": true
        },
        {
            "handle": "meta_title",
            "type": "string"
        },
        {
            "handle": "meta_description",
            "type": "string"
        },
        {
            "handle": "tags",
            "type": "array"
        },
        {
            "handle": "body",
            "type": "string",
            "input": {
                "type": "editor"
            }
        }
    ],
    "ui": {
        "cp": {
            "section": {
                "sort_order": 1,
                "buttons": [{ "handle": "create" }]
            }
        },
        "tables": [
            {
                "handle": "default",
                "columns": [
                    { "handle": "title" },
                    { "handle": "id" },
                    { "handle": "path" }
                ],
                "buttons": [
                    {
                        "handle": "edit"
                    },
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "{entry.path}",
                            "target": "_blank"
                        }
                    }
                ]
            }
        ],
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "{entry.path}",
                            "target": "_blank"
                        }
                    }
                ]
            }
        ]
    }
}
