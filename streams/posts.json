{
    "config": {
        "source": {
            "format": "md"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "/post/{id}",
            "view": "post",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "name": "ID",
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "author",
            "type": "string",
            "required": true
        },
        {
            "handle": "author_text",
            "type": "string"
        },
        {
            "handle": "author_url",
            "type": "url",
            "required": true
        },
        {
            "handle": "publish_at",
            "type": "date",
            "required": true
        },
        {
            "handle": "meta_title",
            "type": "string"
        },
        {
            "handle": "meta_description",
            "type": "string",
            "input": {
                "type": "textarea"
            }
        },
        {
            "handle": "tags",
            "type": "array"
        },
        {
            "handle": "body",
            "type": "markdown"
        }
    ],
    "ui": {
        "admin": {
            "navigation": [
                {
                    "sort_order": 2,
                    "text": "Posts",
                    "url": "/admin/posts",
                    "component": "anchor"
                }
            ]
        },
        "components": [
            {
                "component": "table",
                "handle": "default",
                "columns": [
                    {
                        "value": "title",
                        "header": {
                            "text": "Title"
                        }
                    },
                    {
                        "value": "id",
                        "header": {
                            "text": "Id"
                        }
                    },
                    {
                        "value": "{entry.publish_at}",
                        "header": {
                            "text": "Publish Date"
                        }
                    }
                ],
                "buttons": [
                    {
                        "tag": "a",
                        "handle": "edit",
                        "text": "Edit",
                        "url": "/{request.segments.0}/{request.segments.1}/{entry.id}/edit"
                    },
                    {
                        "tag": "a",
                        "handle": "view",
                        "text": "View",
                        "url": "/post/{entry.id}",
                        "attributes": {
                            "target": "_blank"
                        }
                    }
                ]
            },
            {
                "component": "form",
                "handle": "default",
                "buttons": [
                    {
                        "tag": "a",
                        "text": "View",
                        "handle": "view",
                        "url": "./view",
                        "attributes": {
                            "target": "_blank"
                        }
                    }
                ]
            }
        ]
    }
}
