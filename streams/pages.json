{
    "config": {
        "source": {
            "format": "html"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "{path}",
            "view": "page",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "name": "ID",
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true,
            "description": "The ID of the page. This is used to reference the page.",
            "input": {
                "placeholder": "my-page"
            }
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "path",
            "string": "path",
            "required": true,
            "description": "The URI path of the page. This is used in constructing the URL.",
            "input": {
                "placeholder": "about/contact"
            }
        },
        {
            "handle": "meta_title",
            "type": "string"
        },
        {
            "handle": "meta_description",
            "type": "string"
        },
        {
            "handle": "body",
            "type": "markdown"
        }
    ],
    "ui": {
        "cp": {
            "section": {
                "sort_order": 1,
                "buttons": [{ "handle": "create" }]
            }
        },
        "tables": [
            {
                "handle": "default",
                "columns": [
                    { "handle": "title" },
                    { "handle": "id" },
                    { "handle": "path" }
                ],
                "buttons": [
                    {
                        "handle": "edit"
                    },
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "{entry.path}",
                            "target": "_blank"
                        }
                    }
                ]
            }
        ],
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "{entry.path}",
                            "target": "_blank"
                        }
                    }
                ]
            }
        ]
    }
}
