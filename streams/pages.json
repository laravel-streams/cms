{
    "config": {
        "source": {
            "format": "html"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "{path}",
            "view": "page",
            "parse": true,
            "defer": true
        }
    ],
    "fields": [
        {
            "name": "ID",
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true,
            "description": "The ID of the page. This is used to reference the page.",
            "input": {
                "placeholder": "my-page"
            }
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "path",
            "string": "path",
            "required": true,
            "description": "The URI path of the page. This is used in constructing the URL.",
            "input": {
                "placeholder": "about/contact"
            }
        },
        {
            "handle": "meta_title",
            "type": "string"
        },
        {
            "handle": "meta_description",
            "type": "string"
        },
        {
            "handle": "body",
            "type": "string",
            "input": {
                "type": "editor"
            }
        }
    ],
    "ui": {
        "admin": {
            "navigation": [
                {
                    "sort_order": 3,
                    "text": "Pages",
                    "url": "/admin/pages",
                    "component": "anchor"
                }
            ]
        },
        "components": [
            {
                "component": "table",
                "handle": "default",
                "columns": [
                    {
                        "value": "title",
                        "header": {
                            "text": "Title"
                        }
                    },
                    {
                        "value": "id",
                        "header": {
                            "text": "Id"
                        }
                    },
                    {
                        "value": "path",
                        "header": {
                            "text": "Path"
                        }
                    }
                ],
                "buttons": [
                    {
                        "tag": "a",
                        "handle": "edit",
                        "text": "Edit",
                        "url": "/{request.segments.0}/{request.segments.1}/{entry.id}/edit"
                    },
                    {
                        "tag": "a",
                        "handle": "view",
                        "text": "View",
                        "url": "{entry.path}",
                        "attributes": {
                            "target": "_blank"
                        }
                    }
                ]
            },
            {
                "component": "form",
                "handle": "default",
                "buttons": [
                    {
                        "tag": "a",
                        "text": "View",
                        "handle": "view",
                        "url": "{entry.path}",
                        "attributes": {
                            "target": "_blank"
                        }
                    }
                ]
            }
        ]
    }
}
