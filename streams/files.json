{
    "name": "Files",
    "handle": "files",
    "description": "Basic filesystem cache.",
    "config": {
        "source": {
            "format": "json"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "files",
            "view": "files"
        },
        {
            "handle": "view",
            "uri": "files\/{id}",
            "view": "file"
        },
        {
            "handle": "render",
            "uri": "file/{id}",
            "uses": "App\\Http\\Controllers\\ViewFile"
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "uuid",
            "required": true,
            "unique": true,
            "config": {
                "default": true
            }
        },
        {
            "handle": "path",
            "type": "string",
            "required": true
        },
        {
            "handle": "is_dir",
            "type": "boolean"
        },
        {
            "handle": "disk",
            "type": "string",
            "required": true
        },
        {
            "handle": "name",
            "type": "string",
            "required": true
        },
        {
            "handle": "size",
            "type": "integer"
        },
        {
            "handle": "mime_type",
            "type": "string"
        },
        {
            "handle": "visibility",
            "type": "string"
        },
        {
            "handle": "last_modified",
            "type": "datetime"
        },
        {
            "handle": "extension",
            "type": "string"
        }
    ],
    "ui": {
        "admin": {
            "navigation": [
                {
                    "sort_order": 6,
                    "text": "Files",
                    "url": "/admin/files",
                    "component": "anchor",
                    "buttons": [],
                    "menu": []
                }
            ]
        },
        "tables": [
            {
                "handle": "default",
                "columns": [
                    {
                        "heading": "Path",
                        "value": "path"
                    }
                ],
                "buttons": [
                    {
                        "tag": "a",
                        "handle": "edit",
                        "text": "Edit",
                        "url": "/{request.segments.0}/{request.segments.1}/{entry.id}/edit"
                    },
                    {
                        "tag": "a",
                        "text": "Data",
                        "handle": "data",
                        "url": "/files/{entry.id}",
                        "attributes": {
                            "target": "_blank",
                            "class": ["a-button", "-secondary"]
                        }
                    },
                    {
                        "tag": "a",
                        "text": "Render",
                        "handle": "render",
                        "url": "/file/{entry.id}",
                        "attributes": {
                            "target": "_blank",
                            "class": ["a-button", "-secondary"]
                        }
                    }
                ],
                "config": {
                    "order_by": [
                        ["path", "asc"]
                    ]
                }
            }
        ],
        "forms": [
            {
                "handle": "default"
            }
        ]
    }
}
